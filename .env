# Embeddings
EMBED_MODEL=BAAI/bge-small-en-v1.5
RERANK_MODEL=BAAI/bge-reranker-large

# LLM (vLLM OpenAI compatible)
LLM_BASE_URL=http://vllm:8002/v1
